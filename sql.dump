drop database if exists autofrenos;
create database autofrenos;
use autofrenos;

create table usuario(
	u_id int NOT NULL primary key auto_increment,
	u_name varchar(30) NOT NULL,
	u_pswd varchar(16) binary NOT NULL,
	u_role varchar(15) NOT NULL);

create table car(
	a_id int(10) NOT NULL primary key auto_increment,
	a_patente varchar(15) NOT NULL,
	a_vehiculo varchar(40) NOT NULL,
	a_titular varchar(40) NOT NULL,
	a_telefono varchar(20) NOT NULL);

create table ficha(
	f_id int(10) NOT NULL primary key auto_increment,
	a_id int(10) NOT NULL,
	f_desc varchar(150) NOT NULL,
	f_fecha date NOT NULL);

create table client(
	c_id int(10) NOT NULL primary key auto_increment,
	c_name varchar(60) NOT NULL,
	c_dir varchar(60) NOT NULL,
	c_telefono varchar(20) NOT NULL);

create table cta(
	cta_id int(10) NOT NULL primary key auto_increment,
	c_id int(10) NOT NULL,
	cta_desc varchar(150) NOT NULL,
	cta_debe float(15)  NOT NULL,
	cta_haber float(15) NOT NULL,
	cta_fecha date NOT NULL);

